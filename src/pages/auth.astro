---
import Landing from "../layouts/Landing.astro";
export const prerender = true;
---

<Landing>
    <div class="absolute top-0 inset-x-0 h-64 flex items-start">
        <div
            class="h-24 w-2/3 bg-gradient-to-br blur-2xl via-blue-5 to-transparent from-pink-6 op-40"
        >
        </div>
        <div
            class="h-20 w-3/5 bg-gradient-to-r op-40 blur-2xl from-transparent to-blue-5/80"
        >
        </div>
    </div>
    <div class="h-screen relative mt-40">
        <div class="text-center">
            <h2
                class="font-bold leading-relaxed text-4xl md:text-5xl underline underline-offset-10 text-white/97 decoration-wavy"
            >
                Welcome Neitizen!
            </h2>
        </div>
        <div class="px-5 grid place-items-center pt-30">
            <button
                class="brightness-100 lg:hover:scale-103 hover:shadow-purple-5 transition p-1 rounded-xl bg-gradient-to-br from-blue-5 via-purple-6 to-pink-5 hover:to-pink-6 hover:from-purple-6 hover:via-blue-5"
            >
                <div
                    class="inline-flex align-middle items-center text-center text-xl px-auto py-4 md:w-md md:py-5 backdrop-blur-xl bg-black/95 rounded-lg w-full h-full text-white font-semibold"
                >
                    <div class="block mx-auto [*>&]:inline-flex [*>&]:align-middle [*>&]:items-center [*>&]:text-center"><span class="i-carbon-logo-google flex scale-167 mx-4"></span>Continue With Google</div>
                </div>
            </button>
        </div>
        <div class="absolute bottom-15 opacity-50 inset-x-0 h-64 flex items-end">
            <div
                class="h-24 w-2/3 bg-gradient-to-br blur-2xl via-blue-5 to-transparent from-pink-6"
            >
            </div>
        </div>
    </div>
</Landing>
